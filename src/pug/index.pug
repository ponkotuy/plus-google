doctype html
html(lang='en')
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title Plus Google
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/muicss/0.9.39/css/mui.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/muicss/0.9.39/js/mui.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.16/vue.min.js')
    script(src='js/main.js')
    style.
      .mui-container {
        padding-top: 10%;
      }
  body
    .mui-container.mui--text-center
      .mui--text-display4 Plus Google
      form#searcher.mui-form--inline(style='padding: 5%', @submit.prevent, @submit='search')
        .mui-textfield(style='width: 50%')
          input#query(type='text', name='q', v-model='query', style='height: 50px; font-size: 3em;')
        button.mui-btn.mui-btn--primary.mui-btn--large(type='submit') search

      form#loader.mui-form(style='padding: 5%', @submit.prevent, @submit='load')
        .mui-textfield
          label Exclude elements from JSON
          textarea#json(type='text', v-model='json')
        button.mui-btn.mui-btn--default(type='submit') save JSON
